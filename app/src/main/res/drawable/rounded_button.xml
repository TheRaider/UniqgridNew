<?xml version="1.0" encoding="utf-8"?>
<!-- Background for button with rounded corners -->
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <corners
        android:radius="50dp"
        />
    <gradient
        android:angle="45"
        android:centerX="15%"
        android:startColor="#12a8e6"
        android:centerColor="#12a8e6"
        android:endColor="#12a8e6"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <size
        android:width="110dp"
        android:height="50dp"
        />
    <stroke
        android:width="3dp"
        android:color="#12a8e6"
        />
</shape>